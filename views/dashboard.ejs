<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>To-Do List</title>
<style>

body {
  font-family: 'Arial', sans-serif;
  background-color: #f0f8ff; 
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
  flex-direction: column;
}

.container {
  text-align: center;
}

h1 {
  color: #333;
  margin-top: 20px;
}

.form {
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  width: 300px;
  text-align: center;
  margin-top: 20px;
}

#taskInput {
  width: 80%;
  padding: 10px;
  border: 2px solid #5f9ea0; 
  border-radius: 5px;
  margin-bottom: 10px;
  font-size: 16px;
}

button {
  background-color: #5f9ea0; 
  color: white;
  border: none;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  margin-top: 10px;
  font-size: 16px;
}

button:hover {
  background-color: #53868b; 
}

#taskList {
  list-style-type: none;
  padding: 0;
}

#taskList li {
  background: #ffebcd;
  padding: 10px;
  margin: 10px 0;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

#taskList li .delete-btn {
  background-color: #ff4500;
  color: white;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
  cursor: pointer;
  margin-left: 10px;
}

#taskList li .delete-btn:hover {
  background-color: #e63900; 
}

#taskList li .strikethrough-btn {
  background-color: #4682b4; 
  color: white;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
  cursor: pointer;
}

#taskList li .strikethrough-btn:hover {
  background-color: #4169e1; 
}

.strikethrough {
  text-decoration: line-through;
  color: #a9a9a9; 
}
</style
</head>
<body>

<div class="container">
  <h1>To-Do List</h1>
  <div class="form">
    <input type="text" id="taskInput" placeholder="Add new task...">
    <button onclick="addTask()">Add Task</button>
    <ul id="taskList">
      <!-- Tasks will be dynamically added here -->
    </ul>
  </div>
</div>

<script>
function addTask() {
  var taskInput = document.getElementById("taskInput");
  var taskList = document.getElementById("taskList");
  var taskText = taskInput.value.trim();

  if (taskText !== "") {
    var li = document.createElement("li");
    li.textContent = taskText;
    
    var deleteBtn = document.createElement("button");
    deleteBtn.textContent = "Delete";
    deleteBtn.className = "delete-btn";
    deleteBtn.onclick = function() {
      li.remove();
    };
    
    var strikeBtn = document.createElement("button");
    strikeBtn.textContent = "Strikethrough";
    strikeBtn.className = "strikethrough-btn";
    strikeBtn.onclick = function() {
      li.classList.toggle("strikethrough");
    };
    
    li.appendChild(deleteBtn);
    li.appendChild(strikeBtn);
    taskList.appendChild(li);
    taskInput.value = "";
  }
}
</script>

</body>
</html>
